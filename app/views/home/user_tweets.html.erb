
<h1><%= @item.titleize %>'s Tweets</h1>

<ul>
<% @users.each do |thing| %>
    <% if @item == thing.user_name %>
        <% @item_id = thing.id %>
            <% @tweets.each do |x| %>
                    <% if x.user_id == @item_id %>
                        <li><%= x.description %> | <%= link_to "Show", controller: "tweets", action: "show", id: x.id   %></li>
                        
                    <% end %>
            <% end %>
    <% end %>
<% end %>

</ul>

