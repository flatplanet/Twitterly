<% if current_user != nil %>
  <% @current_id = current_user.id %>
<% else %>
  <% @current_id = "" %>
<% end %>

<p>
  <strong>Description:</strong>
  
  <%= @tweet.description %>
</p>

<p>
  <strong>Users:</strong>
  <% @tweet.user_id %>
  <% @namer.each do |x| %>
    <% if x.id == @tweet.user_id %>
      <a href="/<%= x.user_name %>">@<%= x.user_name %></a>
    
</p>

    <% if @current_id == @tweet.user_id %>
      <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
      <%= link_to 'Destroy', tweet_path(@tweet), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
  <% end %>
<% end %>
<%= link_to 'Back', tweets_path %>
